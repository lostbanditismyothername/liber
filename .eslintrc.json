{
  "extends": ["airbnb", "prettier", "plugin:node/recommended"],
  "plugins": ["prettier"],
  "rules": {
    "prettier/prettier": "error",
    "no-unused-vars": "warn",
    "no-console": "off",
    "func-names": "off",
    "no-process-exit": "off",
    "object-shorthand": "off",
    "class-methods-use-this": "off",
    "no-underscore-dangle": 0,
    "node/no-unpublished-require": [
      "error",
      {
        "allowModules": ["supertest"]
      }
    ]
  },
  "env": {
    "commonjs": true,
    "es2021": true,
    "node": true,
    "jest": true
  }
}
